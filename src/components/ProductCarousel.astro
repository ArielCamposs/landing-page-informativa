---
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
---

<section id="catalogo" class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">
                Favoritos de la Semana
            </h2>
            <div class="w-24 h-1 bg-blue-600 mx-auto rounded-full"></div>
        </div>

        <!-- Contenedor Swiper -->
        <div class="swiper mySwiper px-4 md:px-10 py-10">
            <div class="swiper-wrapper">
                <!-- Slide 1 -->
                <div class="swiper-slide">
                    <div
                        class="group bg-slate-50 rounded-2xl p-6 transition-all hover:shadow-xl border border-slate-100"
                    >
                        <div
                            class="h-64 overflow-hidden rounded-xl mb-6 relative"
                        >
                            <img
                                src="https://images.unsplash.com/photo-1507473888900-52e1adad5474?q=80&w=1000&auto=format&fit=crop"
                                alt="L치mpara"
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                            />
                            <span
                                class="absolute top-4 right-4 bg-white text-slate-900 text-xs font-bold px-3 py-1 rounded-full"
                                >NUEVO</span
                            >
                        </div>
                        <h3 class="text-xl font-bold mb-2">L치mpara Nordic</h3>
                        <p class="text-slate-500 mb-4">
                            Dise침o minimalista de roble.
                        </p>
                        <div class="flex justify-between items-center">
                            <span class="text-2xl font-bold text-blue-600"
                                >$45.990</span
                            >
                            <button
                                class="w-10 h-10 rounded-full bg-slate-900 text-white flex items-center justify-center hover:bg-blue-600 transition-colors"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    class="w-5 h-5"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M12 4.5v15m7.5-7.5h-15"></path></svg
                                >
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Slide 2 -->
                <div class="swiper-slide">
                    <div
                        class="group bg-slate-50 rounded-2xl p-6 transition-all hover:shadow-xl border border-slate-100"
                    >
                        <div
                            class="h-64 overflow-hidden rounded-xl mb-6 relative"
                        >
                            <img
                                src="https://images.unsplash.com/photo-1513506003013-953a45bf78f7?q=80&w=1000&auto=format&fit=crop"
                                alt="Silla"
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                            />
                        </div>
                        <h3 class="text-xl font-bold mb-2">Silla Eames</h3>
                        <p class="text-slate-500 mb-4">
                            Comodidad y estilo moderno.
                        </p>
                        <div class="flex justify-between items-center">
                            <span class="text-2xl font-bold text-blue-600"
                                >$89.990</span
                            >
                            <button
                                class="w-10 h-10 rounded-full bg-slate-900 text-white flex items-center justify-center hover:bg-blue-600 transition-colors"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    class="w-5 h-5"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M12 4.5v15m7.5-7.5h-15"></path></svg
                                >
                            </button>
                        </div>
                    </div>
                </div>
                <!-- Slide 3 -->
                <div class="swiper-slide">
                    <div
                        class="group bg-slate-50 rounded-2xl p-6 transition-all hover:shadow-xl border border-slate-100"
                    >
                        <div
                            class="h-64 overflow-hidden rounded-xl mb-6 relative"
                        >
                            <img
                                src="https://images.unsplash.com/photo-1583847661867-7c54d0507f7d?q=80&w=1000&auto=format&fit=crop"
                                alt="Mesa"
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                            />
                            <span
                                class="absolute top-4 right-4 bg-red-500 text-white text-xs font-bold px-3 py-1 rounded-full"
                                >-20%</span
                            >
                        </div>
                        <h3 class="text-xl font-bold mb-2">Mesa de Centro</h3>
                        <p class="text-slate-500 mb-4">
                            Metal negro industrial.
                        </p>
                        <div class="flex justify-between items-center">
                            <span class="text-2xl font-bold text-blue-600"
                                >$120.000</span
                            >
                            <button
                                class="w-10 h-10 rounded-full bg-slate-900 text-white flex items-center justify-center hover:bg-blue-600 transition-colors"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                                    class="w-5 h-5"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        d="M12 4.5v15m7.5-7.5h-15"></path></svg
                                >
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Paginaci칩n -->
            <div class="swiper-pagination !relative !mt-10"></div>
        </div>
    </div>
</section>

<script>
    import Swiper from "swiper";
    import { Navigation, Pagination, Autoplay } from "swiper/modules";

    const swiper = new Swiper(".mySwiper", {
        modules: [Navigation, Pagination, Autoplay],
        slidesPerView: 1,
        spaceBetween: 30,
        loop: true,
        autoplay: {
            delay: 3000,
            disableOnInteraction: false,
        },
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
        breakpoints: {
            640: {
                slidesPerView: 2,
            },
            1024: {
                slidesPerView: 3,
            },
        },
    });
</script>

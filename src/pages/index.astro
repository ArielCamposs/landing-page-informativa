		<!-- 5. RESERVA AVANZADA (Calendario + Horas) -->
		<section id="reservar" class="py-24 relative bg-black/40">
			<div class="container mx-auto px-6 max-w-4xl">
				<div
					class="bg-zinc-900/90 border border-white/10 rounded-3xl shadow-2xl overflow-hidden backdrop-blur-md"
				>
					<!-- Encabezado del Formulario -->
					<div
						class="p-8 md:p-10 border-b border-white/10 text-center relative"
					>
						<div
							class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-amber-500 to-transparent opacity-70"
						>
						</div>
						<h2
							class="text-3xl font-bold text-white font-serif mb-2"
						>
							Agenda tu Cita
						</h2>
						<p class="text-gray-400 text-sm">
							Selecciona el d√≠a y la hora perfecta para tu ritual.
						</p>
					</div>

					<div class="flex flex-col md:flex-row">
						<!-- COLUMNA 1: Datos del Cliente y Servicio -->
						<div
							class="w-full md:w-1/3 p-8 border-b md:border-b-0 md:border-r border-white/10 bg-white/5"
						>
							<h3
								class="text-amber-500 font-bold uppercase text-xs tracking-widest mb-6"
							>
								1. Tus Datos
							</h3>
							<form id="booking-step-1" class="space-y-4">
								<div>
									<label
										class="block text-xs text-gray-500 mb-1"
										>Nombre Completo</label
									>
									<input
										type="text"
										id="name"
										class="w-full bg-black border border-zinc-700 rounded p-3 text-white text-sm focus:border-amber-500 focus:outline-none transition-colors"
										placeholder="Ej: Marco Rossi"
										required
									/>
								</div>
								<div>
									<label
										class="block text-xs text-gray-500 mb-1"
										>Servicio</label
									>
									<select
										id="service"
										class="w-full bg-black border border-zinc-700 rounded p-3 text-white text-sm focus:border-amber-500 focus:outline-none transition-colors"
									>
										<option value="Corte Cl√°sico"
											>Corte Cl√°sico ($18.000)</option
										>
										<option value="Barba Ritual"
											>Barba Ritual ($15.000)</option
										>
										<option value="Full Experience"

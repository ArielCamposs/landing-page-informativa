						</div>
					</div>
				</div>
			</div>
		</section>

		<footer class="py-8 text-center border-t border-white/5">
			<p class="text-zinc-600 text-xs">
				¬© 2025 The Barber Club. Santiago, Chile.
			</p>
		</footer>
	</section>

	<script>
		// 1. Script de WhatsApp
		const form = document.getElementById("booking-form");
		form?.addEventListener("submit", (e) => {
			e.preventDefault();
			const name = (document.getElementById("name") as HTMLInputElement)
				.value;
			const service = (
				document.getElementById("service") as HTMLSelectElement
			).value;
			window.open(
				`https://wa.me/56912345678?text=Hola, soy ${name}. Quiero agendar un ${service}.`,
				"_blank",
			);
		});

		// 2. Configuraci√≥n Carrusel (Swiper)
		import Swiper from "swiper";
		import { Navigation, Autoplay } from "swiper/modules";

		new Swiper(".mySwiper", {
			modules: [Navigation, Autoplay],
			slidesPerView: 1,
			spaceBetween: 20,
			loop: true,
			autoplay: { delay: 3500 },
			navigation: {
				nextEl: ".next-btn",
				prevEl: ".prev-btn",
			},
			breakpoints: {
				640: { slidesPerView: 2 },
				1024: { slidesPerView: 3 },
			},
		});
		const menuToggle = document.getElementById("menu-toggle");
		const mobileMenu = document.getElementById("mobile-menu");

		menuToggle?.addEventListener("click", () => {
			mobileMenu?.classList.toggle("hidden");
			mobileMenu?.classList.toggle("flex");
		});

		// Cerrar men√∫ al hacer click en un enlace
		mobileMenu?.querySelectorAll("a").forEach((link) => {
			link.addEventListener("click", () => {
				mobileMenu.classList.add("hidden");
				mobileMenu.classList.remove("flex");
			});
		});
		// L√ìGICA DEL CALENDARIO Y HORARIOS

		const datePicker = document.getElementById(
			"date-picker",
		) as HTMLInputElement;
		const timeSlotsContainer = document.getElementById("time-slots");
		const selectedTimeInput = document.getElementById(
			"selected-time",
		) as HTMLInputElement;
		const confirmBtn = document.getElementById(
			"confirm-booking",
		) as HTMLButtonElement;
		const nameInput = document.getElementById("name") as HTMLInputElement;

		// 1. Configurar Fecha M√≠nima (Hoy)
		const today = new Date().toISOString().split("T")[0];
		datePicker.min = today;
		datePicker.value = today; // Seleccionar hoy por defecto

		// 2. Generar Horarios (De 10:00 a 18:00)
		const startHour = 10;
		const endHour = 18;

		function generateTimeSlots() {
			timeSlotsContainer.innerHTML = ""; // Limpiar
			selectedTimeInput.value = ""; // Resetear selecci√≥n
			checkFormValidity();

			for (let hour = startHour; hour <= endHour; hour++) {
				// Crear hora en formato "10:00"
				const timeString = `${hour}:00`;

				const btn = document.createElement("button");
				btn.type = "button";
				btn.className =
					"py-2 px-1 text-sm border border-zinc-700 rounded text-gray-300 hover:border-amber-500 hover:text-amber-500 transition-all focus:outline-none time-slot-btn";
				btn.textContent = timeString;

				// Evento Click
				btn.addEventListener("click", function () {
					// Quitar clase activa de todos
					document.querySelectorAll(".time-slot-btn").forEach((b) => {
						b.classList.remove(
							"bg-amber-600",
							"text-black",
							"border-amber-600",
							"font-bold",
						);
						b.classList.add("text-gray-300", "border-zinc-700");
					});

					// Activar este bot√≥n
					this.classList.remove(
						"text-gray-300",
						"border-zinc-700",
						"hover:border-amber-500",
						"hover:text-amber-500",
					);
					this.classList.add(
						"bg-amber-600",
						"text-black",
						"border-amber-600",
						"font-bold",
					);

					// Guardar valor
					selectedTimeInput.value = timeString;
					checkFormValidity();
				});

				timeSlotsContainer.appendChild(btn);
			}
		}

		// 3. Validar formulario para activar bot√≥n
		function checkFormValidity() {
			if (
				nameInput.value.trim() !== "" &&
				datePicker.value !== "" &&
				selectedTimeInput.value !== ""
			) {
				confirmBtn.disabled = false;
				confirmBtn.classList.remove("opacity-50", "cursor-not-allowed");
			} else {
				confirmBtn.disabled = true;
				confirmBtn.classList.add("opacity-50", "cursor-not-allowed");
			}
		}

		// Listeners
		datePicker.addEventListener("change", generateTimeSlots);
		nameInput.addEventListener("input", checkFormValidity);

		// Inicializar horarios al cargar
		generateTimeSlots();

		// 4. Enviar a WhatsApp (Corregido)
		confirmBtn.addEventListener("click", () => {
			const name = nameInput.value;
			const service = (
				document.getElementById("service") as HTMLSelectElement
			).value;
			const date = datePicker.value;
			const time = selectedTimeInput.value;

			// Creamos el texto limpio primero
			const textRaw = `Hola TBC, soy *${name}*.\nQuisiera reservar una hora: \n *${service}*\n Fecha: *${date}*\n Hora: *${time}*`;

			// Codificamos todo el texto para URL de forma segura
			const textEncoded = encodeURIComponent(textRaw);

			// Abrimos WhatsApp
			window.open(
				`https://wa.me/56912345678?text=${textEncoded}`,
				"_blank",
			);
		});
	</script>


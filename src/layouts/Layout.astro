---
interface Props {
    title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
        <!-- Fuente: Playfair Display (Títulos) y Outfit (Texto) -->
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&family=Playfair+Display:wght@400;700;900&display=swap"
            rel="stylesheet"
        />
    </head>
    <!-- FONDO: Gradiente Radial (Luz Ámbar arriba centro -> Negro profundo) -->
    <body
        class="bg-[#050505] text-slate-200 font-['Outfit'] antialiased"
        style="background-image: radial-gradient(circle at 50% 0%, #1f150a 0%, #000000 70%); min-height: 100vh;"
    >
        <slot />
    </body>
</html>

<style is:global>
    /* Detalles dorados globales */
    .swiper-pagination-bullet-active {
        background-color: #d97706 !important;
    }
    h1,
    h2,
    h3 {
        font-family: "Playfair Display", serif;
    }

    /* Barra de scroll oscura y fina */
    ::-webkit-scrollbar {
        width: 8px;
    }
    ::-webkit-scrollbar-track {
        background: #000;
    }
    ::-webkit-scrollbar-thumb {
        background: #333;
        border-radius: 4px;
    }
    ::-webkit-scrollbar-thumb:hover {
        background: #d97706;
    }
</style>
